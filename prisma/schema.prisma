generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GC {
  id             String    @id @default(cuid())
  image          String?
  name           String
  date           String?
  time           String
  address        String
  description    String?
  targetAudience String?

  leaders        GCLeader[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GCLeader {
  id        String   @id @default(cuid())
  name      String
  phone     String  

  gcs       GC[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
